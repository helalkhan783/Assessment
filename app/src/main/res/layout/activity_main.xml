<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".MainActivity">
        <include
            layout="@layout/toolbar"/>


     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <LinearLayout
             android:layout_margin="10dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"

                 android:orientation="vertical">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Name *"
                     android:textColor="@color/black"
                     android:textSize="16sp" />

                 <EditText
                     android:id="@+id/name"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/et_and_spinner_height"
                     android:layout_marginTop="1dp"
                     android:layout_weight="1.2"
                     android:background="@drawable/edittext_shape"
                     android:hint="Name"
                     android:maxLines="1"
                     android:paddingLeft="5dp"
                     android:singleLine="true"
                     android:textColor="@color/black"
                     android:textColorHint="#808080"
                     android:textSize="@dimen/fourteen_sp_text_size" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:text="Select Country"
                     android:textColor="@color/black"
                     android:textSize="16sp" />

                 <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                     android:id="@+id/country"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/et_and_spinner_height"
                     app:smsp_isSearchable="true"
                     app:smsp_searchTextColor="@color/black"

                     app:smsp_searchHintColor="@color/gray"
                     app:smsp_dismissSearchText="cross"
                     app:smsp_enableSearchHeader="false"
                     android:background="@drawable/edittext_shape"
                     android:defaultFocusHighlightEnabled="false"
                     android:paddingLeft="5dp"
                     android:soundEffectsEnabled="false"
                     app:smsp_enableErrorLabel="false"
                     app:smsp_enableFloatingLabel="false"
                     app:smsp_floatingLabelColor="@color/white"
                     app:smsp_hint=" Select"
                     app:smsp_itemListColor="#808080"
                     app:smsp_itemListHintBackgroundColor="#808080"
                     app:smsp_itemListHintColor="#FFFFFF"
                     app:smsp_multilineError="false"
                     app:smsp_selectedItemListColor="#FF5252"
                     app:smsp_underlineSize="0dp" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:text="Select City"
                     android:textColor="@color/black"
                     android:textSize="16sp" />

                 <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                     android:id="@+id/city"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/et_and_spinner_height"
                     app:smsp_isSearchable="true"
                     app:smsp_searchTextColor="@color/black"

                     app:smsp_searchHintColor="@color/gray"
                     app:smsp_dismissSearchText="cross"
                     app:smsp_enableSearchHeader="false"
                     android:background="@drawable/edittext_shape"
                     android:defaultFocusHighlightEnabled="false"
                     android:paddingLeft="5dp"
                     android:soundEffectsEnabled="false"
                     app:smsp_enableErrorLabel="false"
                     app:smsp_enableFloatingLabel="false"
                     app:smsp_floatingLabelColor="@color/white"
                     app:smsp_hint=" Select"
                     app:smsp_itemListColor="#808080"
                     app:smsp_itemListHintBackgroundColor="#808080"
                     app:smsp_itemListHintColor="#FFFFFF"
                     app:smsp_multilineError="false"
                     app:smsp_selectedItemListColor="#FF5252"
                     app:smsp_underlineSize="0dp" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:text="Select Language"
                     android:textColor="@color/black"
                     android:textSize="16sp" />

                 <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                     android:id="@+id/language"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/et_and_spinner_height"
                     android:background="@drawable/edittext_shape"
                     android:defaultFocusHighlightEnabled="false"
                     android:paddingLeft="5dp"
                     android:soundEffectsEnabled="false"
                     app:smsp_enableErrorLabel="false"
                     app:smsp_enableFloatingLabel="false"
                     app:smsp_floatingLabelColor="@color/white"
                     app:smsp_hint=" Select"
                     app:smsp_itemListColor="#808080"
                     app:smsp_itemListHintBackgroundColor="#808080"
                     app:smsp_itemListHintColor="#FFFFFF"
                     app:smsp_multilineError="false"
                     app:smsp_selectedItemListColor="#FF5252"
                     app:smsp_underlineSize="0dp" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:text="Date Of Birth"
                     android:textColor="@color/black"
                     android:textSize="16sp" />

                 <TextView
                     android:id="@+id/dateOfBirth"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/et_and_spinner_height"
                     android:layout_weight="1.2"
                     android:background="@drawable/edittext_shape"
                     android:gravity="center_vertical"
                     android:hint="DD/MM/YYY"
                     android:maxLines="1"
                     android:paddingLeft="5dp"
                     android:singleLine="true"
                     android:textColor="@color/black"
                     android:textColorHint="#808080"
                     android:textSize="@dimen/fourteen_sp_text_size" />


                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:text="Resume"
                     android:textColor="@color/black"
                     android:textSize="16sp" />


                 <LinearLayout
                     android:id="@+id/resume"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">

                     <TextView
                         android:id="@+id/resumeFiletv"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textColor="@color/black"
                         android:textSize="16sp" />

                     <ImageView

                         android:layout_width="match_parent"
                         android:layout_height="80dp"
                         android:layout_weight="1"
                         android:padding="5dp"
                         android:src="@drawable/baseline_picture_as_pdf_24" />

                 </LinearLayout>


             </LinearLayout>


             <Button
                 android:id="@+id/save"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@color/purple_200"
                 android:text="Save" />

             <Button
                 android:id="@+id/userList"
                 android:layout_marginTop="10dp"
                 android:visibility="gone"
                 android:layout_width="match_parent"
                 android:background="@color/purple_200"
                 android:layout_height="wrap_content"
                 android:text="Go To User List" />

         </LinearLayout>
     </ScrollView>

    </LinearLayout>
</layout>